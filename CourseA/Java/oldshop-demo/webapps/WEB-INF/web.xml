<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"                  
         version="4.0">
 
    <display-name> Flower Shop Project</display-name>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/FlowerDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>jp.core.ui.MainServlet</servlet-class>
        <init-param>
            <param-name>InitConfigurator</param-name>
            <param-value>jp.flowershop.config.FlowerAppConfigurator</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>loginview</servlet-name>
        <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>menuview</servlet-name>
        <jsp-file>/WEB-INF/jsp/menu.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>aboutview</servlet-name>
        <jsp-file>/WEB-INF/jsp/about.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>saleslistview</servlet-name>
        <jsp-file>/WEB-INF/jsp/saleslist.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>salesdetaillistview</servlet-name>
        <jsp-file>/WEB-INF/jsp/salesdetaillist.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>productselectionview</servlet-name>
        <jsp-file>/WEB-INF/jsp/productselection.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>navi</servlet-name>
        <jsp-file>/WEB-INF/jsp/navi.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/saleslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/newsales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/cancelsales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/salesdetaillist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/productselection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/selectproduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/unselectproduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginview</servlet-name>
        <url-pattern>/loginview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>menuview</servlet-name>
        <url-pattern>/menuview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aboutview</servlet-name>
        <url-pattern>/aboutview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>saleslistview</servlet-name>
        <url-pattern>/saleslistview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>salesdetaillistview</servlet-name>
        <url-pattern>/salesdetaillistview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productselectionview</servlet-name>
        <url-pattern>/productselectionview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>navi</servlet-name>
        <url-pattern>/navi</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
 </web-app>
